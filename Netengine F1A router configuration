 description P2P-BTWL-VIA-BROADLINK
 ip address 10.252.0.94 255.255.255.254
 undo shutdown

interface Vlanif666
 description Management
 ip address 192.168.66.2 255.255.255.252
 undo shutdown

interface LoopBack0
 description Loopback
