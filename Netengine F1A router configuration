  network 10.251.0.122 0.0.0.1
  network 10.251.0.124 0.0.0.1
  network 10.251.0.126 0.0.0.1
  network 10.251.0.182 0.0.0.1
  network 10.252.0.70 0.0.0.1
  network 10.252.0.92 0.0.0.1
  network 10.252.0.94 0.0.0.1
